<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jack" class="org.springframework.scala.demo.scalaconfig.Person">
        <constructor-arg value="Jack"/>
        <constructor-arg value="Doe"/>
    </bean>

    <bean id="jane" class="org.springframework.scala.demo.scalaconfig.Person">
        <constructor-arg value="Jane"/>
        <constructor-arg value="Doe"/>
    </bean>

    <bean id="john" class="org.springframework.scala.demo.scalaconfig.Person">
        <constructor-arg value="John"/>
        <constructor-arg value="Doe"/>
        <property name="father" ref="jack"/>
        <property name="mother" ref="jane"/>
    </bean>

</beans>